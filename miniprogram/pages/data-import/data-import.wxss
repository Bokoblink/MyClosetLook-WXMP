.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
  text-align: center;
  margin-bottom: 40rpx;
  display: block;
}

.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
  color: #333;
}

.json-input {
  width: calc(100% - 20rpx);
  height: 400rpx; /* 增加高度以容纳更多内容 */
  border: 1rpx solid #eee;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  border-radius: 5rpx;
}

.import-button {
  width: 100%;
  margin-top: 20rpx;
  font-size: 32rpx;
}

.clear-button {
  width: 100%;
  margin-top: 40rpx;
  font-size: 32rpx;
}

.test-button {
  width: 100%;
  margin-top: 20rpx;
  background-color: #007aff;
  color: #fff;
}

.status-message {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: green;
  text-align: center;
  display: block;
  word-break: break-all;
}

.status-message.error {
  color: red;
}
