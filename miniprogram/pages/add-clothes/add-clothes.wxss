/* pages/add-clothes/add-clothes.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 160rpx; /* 为保存按钮留出空间 */
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}

.label.required::after {
  content: '*';
  color: #fa5151;
  margin-left: 8rpx;
}

/* 统一表单元素基础样式 */
input, textarea, .picker-container {
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 输入框独有样式 */
input {
  height: 88rpx;
  padding: 0 15rpx;
}

/* 备注的多行文本框样式 */
textarea {
  height: 150rpx;
  padding: 15rpx; /* textarea需要垂直padding */
}

.upload-box {
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #aaa;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
}

.upload-placeholder {
  color: #888;
}

.preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.save-btn {
  background: #07C160;
  color: white;
  flex: 1; /* 占据全部空间 */
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom)); /* 适配iPhoneX等全面屏 */
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100; /* 确保在最上层 */
}

.size-section {
  border: 1px solid #f0f0f0;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.sub-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 15rpx;
}

.size-section .form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.size-section .label {
  width: 120rpx; /* 固定标签宽度 */
  font-weight: normal;
  margin-bottom: 0;
  flex-shrink: 0; /* 防止被压缩 */
}

.size-section .input {
  flex-grow: 1; /* 输入框占据剩余空间 */
}

/* --- 选择器带清除按钮的样式 --- */
.picker-container {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  height: 88rpx;
  padding: 0 15rpx;
}

.picker-container picker {
  flex: 1; /* 让picker组件自身撑满剩余空间 */
}

.picker-content {
  flex: 1;
  font-size: 28rpx;
}

.picker-content.placeholder-style {
  color: #999;
}

.clear-btn {
  font-size: 36rpx;
  color: #bbb;
  padding-left: 20rpx;
}
